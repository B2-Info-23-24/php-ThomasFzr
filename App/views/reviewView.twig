{% extends "templates/template.twig" %}

{% block content %}
</br></br>

<h3> Mes avis: </h3>

{% if tabReviewAccommodations is not empty %}
<div class="zone-accommodation">
    {% for tabReviewAccommodation in tabReviewAccommodations %}
    <a href="/accommodation/{{ tabReviewAccommodation.accommodationID }}" id="link-accommodation">
        <div class="accommodation">
            <img src="Public/assets/images/{{tabReviewAccommodation.image}}" id="img-accommodation-home" alt="image-{{ tabReviewAccommodation.image }}">
            <div class="zone-price">{{ tabReviewAccommodation.price }} €/nuit</div>
            <div class="description">
                <h4>{{ tabReviewAccommodation.title }}</h4>
            </div>

            <div class="avis">
                {{ tabReviewAccommodation.grade }}/5 ⭐ <br>
                {{ tabReviewAccommodation.comment }} <br>
                {{ tabReviewAccommodation.date |date("d/m/Y") }}
            </div>
        </div>
    </a>
    {% endfor %}
</div>
{% else %}
<p>Aucun avis laissé pour le moment.</p>
{% endif %}

{% endblock %}